// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./database/db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model GameAPI {
  id              Int     @id @default(autoincrement())
  appid           Int     @unique
  name            String
  playtimeMinutes Int
  fullyAchieved   Boolean
}

model GameLocal {
  id              Int     @id @default(autoincrement())
  appid           Int     @unique
  name            String
  sizeOnDisk      Int
}