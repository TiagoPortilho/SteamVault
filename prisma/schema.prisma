datasource db {
  provider = "sqlite"
  url      = "file:./database/db.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Game {
  id               Int     @id @default(autoincrement())
  appid            Int     @unique
  name             String
  playtime_minutes  Int
  fully_achieved   Boolean
  finished         Boolean?
  trophies         String?

  notes            Note[]  // campo de relação necessário para o Prisma
}

model Note {
  id     Int    @id @default(autoincrement())
  appid  Int
  text   String

  game   Game   @relation(fields: [appid], references: [appid], onDelete: Cascade)
}
